<ul>
<% items.forEach ( item => { %>
    <li>
        <section class="book-card">
            <img src="<%= item.image_url %>">
            
            <h1><%= item.title %></h1>

            <p class="author"><%= item.author %></p>

            <% if ((thisPage === 'pages/show.ejs') || (thisPage === 'pages/submit.ejs')){ %>
                <div class="description"><p><%= item.description %></p></div>
                <p class="isbn">isbn: <%= item.isbn %></p>
            <% } %>

            <% if (thisPage === 'pages/home.ejs'){ %>
                <a href="/show?book=<%= item.id %>" class="button view-details-button">View Details</a>
            <% } %>

            <% if ((thisPage === 'pages/show.ejs') || (thisPage === 'pages/submit.ejs')){ %>
                <a href="/" class="button view-details-button">
                    <% if(thisPage === 'pages/show.ejs' ){ %>Go back<% } %>
                    <% if(thisPage === 'pages/submit.ejs' ){ %>Home<% } %>
                </a>
            <% } %>
            
            <% if (thisPage === 'pages/result.ejs') { %>
                <%-include ../partials/book-search-form.ejs %>
            <% } %>
        </section>
    </li>
<% }); %>
</ul>