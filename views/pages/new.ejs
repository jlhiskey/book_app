<form method="POST" action="/new/submit">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" required maxlength="255" />
    </div>

    <div>
        <label for="author">Author</label>
        <input type="text" id="author" name="author" required maxlength="255" />
    </div>

    <div>
        <label for="isbn">ISBN</label>
        <input type="number" id="isbn" name="isbn" required max="9999999999999" />
    </div>

    <div>
        <label for="image_url">Cover Image URL</label>
        <input type="url" id="image_url" name="image_url" required />
    </div>

    <div>
        <label for="book_description">Book Description</label>
        <textarea name="book_description" id="book_description" cols="30" rows="10" required maxlength="2000"></textarea>
    </div>

    <input type="submit" value="Submit!" class="button">
</form>